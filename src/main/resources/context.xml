<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="talkingRobot" class="quoter.TalkingRobotImpl" init-method="talk" scope="prototype">
        <property name="quoters">
            <list>
                <ref bean="shakespeareQuoter"/>
                <ref bean="terminatorQuoter"/>
            </list>
        </property>
    </bean>

    <bean id="shakespeareQuoter" class="quoter.ShakespeareQuoter">
        <property name="message" value="2B || ! 2B" />
    </bean>

    <bean id="terminatorQuoter" class="quoter.TerminatorQuoter">
        <property name="messages">
            <list>
                <value>I'll be back</value>
                <value>Astalavista baby</value>
            </list>
        </property>
    </bean>

    <bean id="propertiesReader" class="quoter.PropertiesReader" abstract="true">
    </bean>

    <bean id="codesPropertiesReader" class="quoter.CodesPropertiesReader" parent="propertiesReader">
        <property name="propertiesFileName" value="world" />
    </bean>
</beans>